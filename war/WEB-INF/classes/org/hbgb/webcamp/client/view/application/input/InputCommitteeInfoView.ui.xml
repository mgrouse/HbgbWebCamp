<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:ScrollPanel>
			
		<g:CaptionPanel captionText="5: Committee" addStyleNames="formOneColumn">
		
			<g:VerticalPanel>
		
			    <!-- <g:HTMLPanel ui:field="verifyWarning" >
					<p>
						<font color="red">Please answer the questions in RED below</font> 
					</p>
				</g:HTMLPanel> -->
			    
				<g:HTMLPanel>
					<p>
						All HeeBees are placed on a committee. 
					   	Please let us know which two committees you would like to be a working member of and your reason 
					   	for wanting to be a part of those committees. We will try to give you your first choice if possible.
					</p>
				</g:HTMLPanel>
		
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
		        	<g:Label text="First Choice"/>
		        	<w:CommitteeListBox ui:field="committee1"/>
				</g:HorizontalPanel>
				
				<g:HTML text="Why do you want to be on this committee?" addStyleNames="longLabel"/>
		        <g:TextArea ui:field="reason1"/>
				
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
		        	<g:Label text="Second Choice"/>
		        	<w:CommitteeListBox ui:field="committee2"/>
				</g:HorizontalPanel>		        
		        
				<g:HTML text="Why do you want to be on this committee?"  addStyleNames="longLabel"/>
		        <g:TextArea ui:field="reason2"/>				
				
				<g:VerticalPanel ui:field="healerSheetPanel">
				
				    <g:HTMLPanel>
					<p>
						 Since one of your choices is the Healer Committee,
						 please enter the following data so we can print up your sign-up sheets.
						 Modalities should just be the names, not descriptive sentences. 
						 The Bio can be a paragraph including information about you, your training, 
						 and more information about your modalities.
					</p>
					<p>
						 Examples are in parentheses.
					</p>
					
					</g:HTMLPanel>
				
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
			        	<g:Label text="Avg. Session length in Minutes (45)"  addStyleNames="longLabel"/>
			        	<g:TextBox ui:field="sessionLength"/>
					</g:HorizontalPanel>
					
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
						<g:Label text="Modality 1 (Massage)"  addStyleNames="longLabel"/>
			        	<g:TextBox ui:field="modality1"/>
					</g:HorizontalPanel>
					
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
						<g:Label text="Modality 2 (Reiki)" addStyleNames="longLabel"/>
			        	<g:TextBox ui:field="modality2"/>
					</g:HorizontalPanel>
					
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
						<g:Label text="Modality 3 (Talk Therapy)"  addStyleNames="longLabel"/>
			        	<g:TextBox ui:field="modality3"/>
					</g:HorizontalPanel>
					
					<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
						<g:Label text="Modality 4 (Chiropractic)"  addStyleNames="longLabel"/>
			        	<g:TextBox ui:field="modality4"/>
					</g:HorizontalPanel>
					
					<g:HTML text="Please write a short healer bio"  addStyleNames="longLabel"/>
		        	<g:TextArea ui:field="bioBox"/>
		        		
		        </g:VerticalPanel> <!-- healer panel -->
		        
		        <g:Button ui:field="nextButton" addStyleNames="right">Next</g:Button>
			</g:VerticalPanel>
			
		</g:CaptionPanel>
			
	</g:ScrollPanel>
</ui:UiBinder> 