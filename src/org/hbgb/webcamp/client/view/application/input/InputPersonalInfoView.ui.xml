<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:ScrollPanel>
		
		<g:CaptionPanel captionText="3: Personal Info" addStyleNames="formOneColumn">
			
			<g:VerticalPanel>		
				
			    <w:MessagesWidget ui:field="messages"/>
			    
				<g:HorizontalPanel>	
				
					<g:CaptionPanel captionText="Demographics" addStyleNames="formTwoColumn">
					
						<g:VerticalPanel>
						
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
					        	<g:Label text="Email"/>
					        	<g:TextBox ui:field="emailBox"/>
							</g:HorizontalPanel>
							
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="firstNameLabel" text="First Name"/>
					        	<g:TextBox ui:field="firstNameBox"/>
					        </g:HorizontalPanel>
					        
					        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="lastNameLabel" text="Last Name"/>
					        	<g:TextBox ui:field="lastNameBox"/>
							</g:HorizontalPanel>
					        
					        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					        	<g:Label text="Playa Name"/>
					        	<g:TextBox ui:field="playaNameBox"/>
					        </g:HorizontalPanel>
					        
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="genderLabel" text="Gender"/>
					        	<w:GenderListBox ui:field="genderBox"/>
							</g:HorizontalPanel>
							
							<g:Label text="Birth Date:" addStyleNames="formRow"/>
					        <w:BirthDateWidget ui:field="birthDate"/>
							
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label addStyleNames="textLengthLabel" text="Default World Job"/>
					        	<g:TextBox ui:field="defaultWorldJobBox"/>
							</g:HorizontalPanel>
							
							<g:VerticalPanel>
								<g:HTML text="What would you like your fellow HeeBees know about you? NOTE: this will be used as a bio on an upcoming page where you will be able to see some details on this years HeeBees"/>
					        	<g:TextArea ui:field="bioBox"/>
							</g:VerticalPanel>		
					        
						</g:VerticalPanel>
						
					</g:CaptionPanel>
					
					
					<g:CaptionPanel captionText="Contact Info"  addStyleNames="formTwoColumn">
					
						<g:VerticalPanel>
						
							<w:AddressWidget ui:field="homeAddress"/>
							
							<g:HTML>	
								<p>
									We will be contacting ALL Hee Bee applicants that we have not already met.
									Please Let us know how best to contact you and when. All times are Pacific Standard Time.
								</p>
							</g:HTML>
											
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="phoneLabel" text="Phone"/>
					        	<g:TextBox ui:field="phoneBox"/>
							</g:HorizontalPanel>
							
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="skypeLabel" text="Skype Name"/>
					        	<g:TextBox ui:field="skypeNameBox"/>
							</g:HorizontalPanel>
							
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="contactMethodLabel" addStyleNames="mediumLabel" text="Preferred Contact Method"/>
					        	<w:ContactMethodListBox ui:field="contactMethodBox"/>
							</g:HorizontalPanel>
							
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label ui:field="contactTimeLabel" addStyleNames="mediumLabel" text="Preferred Contact Time"/>
					        	<w:CallTimeListBox ui:field="contactTimeBox"/>
							</g:HorizontalPanel>
						</g:VerticalPanel>
					</g:CaptionPanel>
				</g:HorizontalPanel>
				
				<g:Button ui:field="nextButton" addStyleNames="right">Next</g:Button>
				
			</g:VerticalPanel>	
		</g:CaptionPanel>
	</g:ScrollPanel>
</ui:UiBinder> 