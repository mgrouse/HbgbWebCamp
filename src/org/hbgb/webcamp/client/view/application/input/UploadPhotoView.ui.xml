<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:ScrollPanel>
		
		<g:CaptionPanel captionText="2: Photo" addStyleNames="formOneColumn">
		
			<g:VerticalPanel>
			
				<g:HTML>
					<p>
						Please upload a picture of yourself. Please make it a picture of your face without sunglasses.
					</p>
				</g:HTML>
				
				<w:MessagesWidget ui:field="messages"/>
				
       			<g:FormPanel ui:field="uploadForm">
       				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
           				<g:FileUpload ui:field="uploadField"></g:FileUpload>
           				<g:Button ui:field="uploadButton"></g:Button>
       				</g:HorizontalPanel>
   				</g:FormPanel>
      				
      			<g:Image ui:field="currentImage" url="http://storage.googleapis.com/hbgbwebcamp.appspot.com/AlexGreyMeditating.jpg" /> 
      			
      			<g:Button ui:field="nextButton" addStyleNames="right">Next</g:Button>
			</g:VerticalPanel>
			
		</g:CaptionPanel>
				
	</g:ScrollPanel>
</ui:UiBinder> 








