<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:CaptionPanel captionText="Application Details">
	
		<g:VerticalPanel>
		
			<g:VerticalPanel ui:field="form">
			
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					<g:Label text="Application Status"/>
					<w:ApplicationStatusListBox ui:field="applicationStatus" />
				</g:HorizontalPanel>
					
				<g:Image ui:field="currentImage"/>
			</g:VerticalPanel>
			
			<g:HorizontalPanel addStyleNames="buttonPanel" ui:field="buttonPanel">
			
				<g:Button ui:field="expandButton">+</g:Button>
				<g:Button ui:field="editButton">Edit</g:Button>
				<g:Button ui:field="saveButton">Save</g:Button>
				
			</g:HorizontalPanel>	
			
		</g:VerticalPanel>
		
	</g:CaptionPanel>
		
</ui:UiBinder> 