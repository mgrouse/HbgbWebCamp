<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:CaptionPanel captionText="Dietary">
		<g:VerticalPanel>
			<g:VerticalPanel ui:field="form">
			
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
		        	<g:Label text="Campers' Diet is:"/>
		        	<w:DietListBox ui:field="dietType"/>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
				    <g:CheckBox ui:field="isGlutenFree"/>
					<g:Label text="Gluten Free."/>
				</g:HorizontalPanel>
				
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
				    <g:CheckBox ui:field="isLactoseIntolerant"/>
					<g:Label text="Lactose Intolerant."/>
				</g:HorizontalPanel>
				
				<g:HTML text="Dietary restrictions"/>
		        <g:TextArea ui:field="dietaryRestrictions"/>
				
			</g:VerticalPanel>
			
			<g:HorizontalPanel addStyleNames="buttonPanel" ui:field="buttonPanel">
				<g:Button ui:field="expandButton">+</g:Button>
				<g:Button ui:field="saveButton">Save</g:Button>
			</g:HorizontalPanel>	
			
		</g:VerticalPanel>
		
	</g:CaptionPanel>
		
</ui:UiBinder> 