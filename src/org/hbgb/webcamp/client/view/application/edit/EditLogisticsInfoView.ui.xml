<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:CaptionPanel captionText="Logistics">
		<g:VerticalPanel>
	
			<g:VerticalPanel ui:field="form">
				<g:HorizontalPanel>	
		
					<g:CaptionPanel captionText="Arrival">
			
						<g:VerticalPanel>
					
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					        	<g:CheckBox ui:field="wantsEarlyTeam"/>
					        	<g:HTML text="I want to be on early team."/>
							</g:HorizontalPanel>
											
											
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:CheckBox ui:field="isAssignedEarlyTeam"/>
								<g:HTML text="This HeeBee IS on early team."/>
							</g:HorizontalPanel>
											
										
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:HTML text="I will travel by: "/>
					        	<w:TransportationListBox ui:field="transportation"/>
							</g:HorizontalPanel>
										
										
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label text="I will arrive on: "/>
					        	<w:DayOfEventListBox ui:field="arrivalDoE"/>
							</g:HorizontalPanel>
										
										
							 <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
					        	<g:Label text="I will arrive: "/>
					        	<w:PlayaTimeListBox ui:field="arrivalTime"/>
							</g:HorizontalPanel>
						
						</g:VerticalPanel>
				
					</g:CaptionPanel>
			
					<g:CaptionPanel captionText="Departure">
					
						<g:VerticalPanel>
						
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
								<g:Label text="I will leave on"/>
					        	<w:DayOfEventListBox ui:field="departureDoE"/>
							</g:HorizontalPanel>
										
							
							 <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
					        	<g:Label text="I will leave: "/>
					        	<w:PlayaTimeListBox ui:field="departureTime"/>
							</g:HorizontalPanel>
							
							
							<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					        	<g:CheckBox ui:field="wantsStrikeTeam"/>
					        	<g:HTML text="I plan on being on Strike team."/>
							</g:HorizontalPanel>
							
						</g:VerticalPanel>
					</g:CaptionPanel>
			
				</g:HorizontalPanel>	
			</g:VerticalPanel>
		
			<g:HorizontalPanel addStyleNames="buttonPanel" ui:field="buttonPanel">
				<g:Button ui:field="expandButton">+</g:Button>
				<g:Button ui:field="editButton">Edit</g:Button>
				<g:Button ui:field="saveButton">Save</g:Button>
			</g:HorizontalPanel>	
		
		</g:VerticalPanel>
	</g:CaptionPanel>
		
</ui:UiBinder> 