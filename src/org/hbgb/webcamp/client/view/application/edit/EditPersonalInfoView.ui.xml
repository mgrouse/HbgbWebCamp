<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:CaptionPanel captionText="Personal">
	<g:VerticalPanel>
	
		<g:VerticalPanel ui:field="form">
		<g:HorizontalPanel>	
			
			<g:CaptionPanel captionText="2: Demographics" styleName="formTwoColumn">
				
					<g:VerticalPanel>
					
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">	
				        	<g:Label text="Email"/>
				        	<g:TextBox ui:field="emailBox"/>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label text="First Name"/>
				        	<g:TextBox ui:field="firstNameBox"/>
				        </g:HorizontalPanel>
				        
				        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label text="Last Name"/>
				        	<g:TextBox ui:field="lastNameBox"/>
						</g:HorizontalPanel>
				        
				        <g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
				        	<g:Label text="Playa Name"/>
				        	<g:TextBox ui:field="playaNameBox"/>
				        </g:HorizontalPanel>
				        
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label text="Gender"/>
				        	<w:GenderListBox ui:field="genderBox"/>
						</g:HorizontalPanel>
						
						<g:Label text="Birth Date"/>
				        <w:BirthDateWidget ui:field="birthDate"/>
						
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label text="Default World Job"/>
				        	<g:TextBox ui:field="defaultWorldJobBox"/>
						</g:HorizontalPanel>
						
						<g:Label text="Bio"/>
				        <g:TextArea ui:field="bioBox"/>
								
				        
					</g:VerticalPanel>
					
				</g:CaptionPanel>
				
				<g:CaptionPanel captionText="Contact Info"  styleName="formTwoColumn">
				
					<g:VerticalPanel>
					
						<w:AddressWidget ui:field="homeAddress"/>
										
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label text="Phone"/>
				        	<g:TextBox ui:field="phoneBox"/>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label text="Skype Name"/>
				        	<g:TextBox ui:field="skypeNameBox"/>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label addStyleNames="mediumLabel" text="Preferred Contact Method"/>
				        	<w:ContactMethodListBox ui:field="contactMethodBox"/>
						</g:HorizontalPanel>
						
						<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
							<g:Label addStyleNames="mediumLabel" text="Preferred Contact Time"/>
				        	<w:CallTimeListBox ui:field="contactTimeBox"/>
						</g:HorizontalPanel>
				
					</g:VerticalPanel>
					
				</g:CaptionPanel>
				
		</g:HorizontalPanel>	
		</g:VerticalPanel>
		
		<g:HorizontalPanel addStyleNames="buttonPanel" ui:field="buttonPanel">
			<g:Button ui:field="expandButton">+</g:Button>
			<g:Button ui:field="editButton">Edit</g:Button>
			<g:Button ui:field="saveButton">Save</g:Button>
		</g:HorizontalPanel>	
	</g:VerticalPanel>
	</g:CaptionPanel>
		
</ui:UiBinder> 