<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui"
	         xmlns:w="urn:import:org.hbgb.webcamp.client.widget">

	<g:CaptionPanel captionText="Shelter">
		<g:VerticalPanel>
		
			<g:VerticalPanel ui:field="form">
			
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					<g:CheckBox ui:field="hasRv"/>
					<g:HTML text="I am bringing an RV."/>
				</g:HorizontalPanel>
				
				<g:HTML text="Please describe your RV. Please mention if you want Electric hook up in this box."/>
		        <g:TextArea ui:field="rvInfo"/>
				
				<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					<g:CheckBox ui:field="isInDormTent"/>	
					<g:HTML text="I am planning on camping in the Dorm tent."/>
	        	</g:HorizontalPanel>	
	        	
	        	<g:HorizontalPanel verticalAlignment="ALIGN_MIDDLE" addStyleNames="formRow">
					<g:CheckBox ui:field="hasStructure"/>
					<g:HTML text="I am bringing a free standing structure."/>
	        	</g:HorizontalPanel>
	        	
				<g:HTML text="Please describe your structure in terms of size, type etc."/>
		        <g:TextArea ui:field="structureInfo"/>
		        
			</g:VerticalPanel>
			
			<g:HorizontalPanel addStyleNames="buttonPanel" ui:field="buttonPanel">
			
				<g:Button ui:field="expandButton">+</g:Button>
				<g:Button ui:field="editButton">Edit</g:Button>
				<g:Button ui:field="saveButton">Save</g:Button>
				
			</g:HorizontalPanel>	
			
		</g:VerticalPanel>
		
	</g:CaptionPanel>
		
</ui:UiBinder> 