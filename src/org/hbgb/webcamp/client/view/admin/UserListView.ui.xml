<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.userViewButtonHPanel 
		{
			margin: 5px 0px 0x 5px;
		}

		.userViewFlexTable 
		{
			margin: 5px 0px 5px 0px;
		}
	</ui:style>

	<g:DecoratorPanel>
		<g:VerticalPanel ui:field="vPanel">
			<g:HorizontalPanel addStyleNames="{style.userViewButtonHPanel}">
				<g:Button ui:field="addButton">Add</g:Button>
				<g:Button ui:field="deleteButton">Delete</g:Button>
				<g:Button ui:field="refreshButton">Refresh</g:Button>
			</g:HorizontalPanel>
				<!--  <g:HTML ui:field="userTable"></g:HTML> -->
				<g:FlexTable ui:field="userTable" addStyleNames="{style.userViewFlexTable}"/>
		</g:VerticalPanel>
	</g:DecoratorPanel>
</ui:UiBinder> 