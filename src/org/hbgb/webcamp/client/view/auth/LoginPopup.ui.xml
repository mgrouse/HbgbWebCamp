<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<g:HTMLPanel>
		<h1>Please Log In</h1>
		<g:SimplePanel ui:field="message"></g:SimplePanel>
		<table>
			<tr>
				<td>Email</td>
				<td>
					<g:TextBox ui:field="emailBox"></g:TextBox>
				</td>
			</tr>
			<tr>
				<td>Password</td>
				<td>
					<g:PasswordTextBox ui:field="passwordBox"></g:PasswordTextBox>
				</td>
			</tr>
			<tr>
				<td></td>
				<td>
					<g:Button ui:field="loginButton"></g:Button>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder> 