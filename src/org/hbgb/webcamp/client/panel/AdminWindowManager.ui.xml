<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
     xmlns:g="urn:import:com.google.gwt.user.client.ui"
     xmlns:w="urn:import:org.hbgb.webcamp.client.widget"
     xmlns:p="urn:import:org.hbgb.webcamp.client.panel.element">
     
    <g:DockLayoutPanel unit='PCT'>
    
		<g:north size='5'>
			<g:LayoutPanel>
				<g:layer left="90%" width="10%" top="25%" height="75%">
					<g:Label ui:field="logoLabel" text="WebCamp" styleName="fins-Logo-Label" />
				</g:layer>
			</g:LayoutPanel>
		</g:north>
		
		<g:south size='3'>
			<g:LayoutPanel>
				<g:layer>
					<w:StatusBar ui:field="status" />
				</g:layer>
			</g:LayoutPanel>
		</g:south>
		
		<g:center>
		
			<g:SplitLayoutPanel ui:field="split">
				<g:west size="150">
					<p:MenuBar ui:field="menuBar" />
				</g:west>
				
				<g:center>
					<p:ContentPanel ui:field="contentPanel" />
				</g:center>
			</g:SplitLayoutPanel>
			
		</g:center>
		
	</g:DockLayoutPanel> 
     
</ui:UiBinder> 