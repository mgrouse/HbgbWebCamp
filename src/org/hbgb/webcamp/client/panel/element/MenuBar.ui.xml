<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	         xmlns:p="urn:import:org.hbgb.webcamp.client.panel.element">

	<ui:with type="org.hbgb.webcamp.client.WebCampResource" field="resource" />

	<g:StackLayoutPanel unit="EM">
		
		<g:stack>
			<g:customHeader size='1.8'>
				<p:MenuHeader text="Manage Campers" imageResource="{resource.spanner}" />
			</g:customHeader>
			
			<g:LayoutPanel>
				<g:layer left='0.5em' width='10em' top='0.5em' height='3em'>
					<p:MenuItem contentName="campers-applications" text="Applications" imageResource="{resource.peers}" />
				</g:layer>
				<!--//top increment by 1.8  -->
				 <g:layer left='0.5em' width='10em' top='2.3em' height='3em'>
					<p:MenuItem contentName="send-email" text="Send Email" imageResource="{resource.bean}" />
				</g:layer>
				
			</g:LayoutPanel>
		</g:stack>
		 
		<g:stack>
			<g:customHeader size='1.8'>
				<p:MenuHeader text="Reports" imageResource="{resource.spanner}" />
			</g:customHeader>
			
			<g:LayoutPanel>
				<g:layer left='0.5em' width='10em' top='0.5em' height='3em'>
					<p:MenuItem contentName="report-meals" text="Meals" imageResource="{resource.shoppingCart}" />
				</g:layer>
			</g:LayoutPanel>
		</g:stack>
		
		<g:stack>
			<g:customHeader size='1.8'>
				<p:MenuHeader text="Utilities" imageResource="{resource.spanner}" />
			</g:customHeader>
			
			<g:LayoutPanel>
				<g:layer left='0.5em' width='10em' top='0.5em' height='3em'>
					<p:MenuItem contentName="utils-early-team" text="Early Team"
						imageResource="{resource.bean}" />
				</g:layer>
			</g:LayoutPanel>
		</g:stack>
		
		<g:stack>
			<g:customHeader size='1.8'>
				<p:MenuHeader text="Dev Tools" imageResource="{resource.spanner}" />
			</g:customHeader>
			
			<g:LayoutPanel>
				<g:layer left='0.5em' width='10em' top='0.5em' height='3em'>
					<p:MenuItem contentName="dev-users" text="Users"
						imageResource="{resource.bean}" />
				</g:layer>
				 <!--//top increment by 1.8  -->
				 <g:layer left='0.5em' width='10em' top='2.3em' height='3em'>
					<p:MenuItem contentName="campers-applications-fancy" text="Applications Fancy" imageResource="{resource.dollar}" />
				</g:layer>
			</g:LayoutPanel>
		</g:stack>
		
	</g:StackLayoutPanel>

</ui:UiBinder> 