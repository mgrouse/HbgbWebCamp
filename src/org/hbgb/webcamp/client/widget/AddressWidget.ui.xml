<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	         xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:CaptionPanel captionText="Address">
	
		<g:VerticalPanel>
		
			<g:HorizontalPanel>	
	        	<g:Label text="Street 1"/>
	        	<g:TextBox ui:field="street1Box"/>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>	
	        	<g:Label text="Street 2"/>
	        	<g:TextBox ui:field="street2Box"/>
			</g:HorizontalPanel>
			
			<g:HorizontalPanel>
				<g:Label text="City"/>
	        	<g:TextBox ui:field="cityBox"/>
	        </g:HorizontalPanel>
	        
	        <g:HorizontalPanel>
	        	<g:Label text="State or Province"/>
	        	<g:TextBox ui:field="stateBox"/>
	        </g:HorizontalPanel>
	        
	        <g:HorizontalPanel>
	        	<g:Label text="Country"/>
	        	<g:TextBox ui:field="countryBox"/>
	        </g:HorizontalPanel>
	        
	        <g:HorizontalPanel>
	        	<g:Label text="Postal Code"/>
	        	<g:TextBox ui:field="postCodeBox"/>
	        </g:HorizontalPanel>
	     
		</g:VerticalPanel>
		
	</g:CaptionPanel>
		
</ui:UiBinder> 